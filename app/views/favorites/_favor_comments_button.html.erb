<% if current_user.favorite?(micropost) %>
  <%= form_with(model: Favorite.find_by(user: current_user, micropost_id: micropost.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'お気に入りから外す', class: 'btn btn-danger btn-sm' %>
  <% end %>
<% else %>
  <%= form_with(model: Favorite.new, local: true) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'お気に入り登録する', class: 'btn btn-primary btn-sm' %>
  <% end %>
<% end %>
